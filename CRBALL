<script>
window.onload = function () {
    alert("Welcome to CR Ball Football Club!");
};

document.getElementById("year").textContent = new Date().getFullYear();

function filterMatches(type) {
    const rows = document.querySelectorAll("#matchTable tr[data-venue]");
    rows.forEach(row => {
        row.style.display = (type === "all" || row.dataset.venue === type) ? "" : "none";
    });
}

const news = [
    { title: "Season Kickoff", text: "CR Ball begins the season with full confidence." },
    { title: "Academy Trials", text: "Youth academy trials are now open." },
    { title: "New Coach", text: "Mr Monyie appointed as head coach." }
];

const container = document.getElementById("newsContainer");
news.forEach(item => {
    const div = document.createElement("div");
    div.className = "card";
    div.innerHTML = `<h3>${item.title}</h3><p>${item.text}</p>`;
    container.appendChild(div);
});
</script>

</body>
